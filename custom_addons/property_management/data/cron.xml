<odoo>
    <data noupdate="1">

        <!-- Lease Expiry Reminder Cron Job -->
        <record id="ir_cron_lease_expiry_reminder" model="ir.cron">
            <field name="name">Lease Expiry Reminder (30 Days Before)</field>
            <field name="model_id" ref="model_property_lease"/>
            <field name="state">code</field>
            <field name="code">model._send_lease_expiry_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>