<?xml version = "1.0" encoding = "UTF-8"?>
<odoo>
<!--list view-->
    <record id="view_property_tenant_list" model="ir.ui.view">
        <field name="name">property.tenant.list</field>
        <field name="model">property.tenant</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <field name="id_number" />
                <field name="lease_ids" />
            </list>
        </field>
    </record>

     <!--form view-->
    <record id="view_property_tenant_form" model="ir.ui.view">
        <field name="name">property.tenant.form</field>
        <field name="model">property.tenant</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="email" />
                        </group>
                        <group>
                            <field name="phone" />
                            <field name="id_number" />   
                        </group>
                    </group>
                    <group>
                        <field name="lease_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Kanban view-->
    <record id="view_property_tenant_kanban" model="ir.ui.view">
        <field name="name">property.tenant.kanban</field>
        <field name="model">property.tenant</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <!--load fields needed in the template -->
                <field name="name" />
                <field name="email" />
                <field name="phone" />
                <field name="id_number" />
                <field name="lease_ids" />

                <!--show the fields in the template-->
                <template>
                    <t t-name="kanban-box">
                        <div class="oe_canban-card">
                            <div>
                                <strong>
                                    <field name = "name" />
                                </strong>
                                <br />
                                <div>
                                    <strong>Email Address:</strong>
                                    <field name="email" />
                                </div>
                                <br />
                                <div>
                                    <strong>Phone:</strong>
                                    <field name="phone" />
                                </div>
                                <br />
                                <div>
                                    <strong>Id Number:</strong>
                                    <field name="id_number" />
                                </div>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>
    </record>

<!--action view-->
    <record id="action_property_tenant" model = "ir.actions.act_window">
        <field name="name">Property Tenant</field>
        <field name="res_model">property.tenant</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>