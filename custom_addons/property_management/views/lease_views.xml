<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--list view-->
    <record id="view_propert_lease_list" model="ir.ui.view">
        <field name="name">property.lease.list</field>
        <field name="model">property.lease</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="lease_name"/>
                <field name="tenant_id"/>
                <field name="property_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="monthly_rent"/>
                <field name="total_paid_amount" />
                <field name="state"/>
            </list>
        </field>
    </record>

    <!--form view-->
    <record id="view_propert_lease_form" model="ir.ui.view">
        <field name="name">property.lease.form</field>
        <field name="model">property.lease</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="print_lease_summary_report"
                                type="object"
                                string="Download Lease Summary"
                                class="btn-primary"/>
                        
                    </header>
                    <header>
                        <button name="export_xlsx" string="Export XLSX" type="object" class="btn-primary"/>

                    </header>

                    <group>
                        <group>
                            <field name="lease_name"/>
                            <field name="tenant_id"/>
                            <field name="property_id"/>
                            
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        
                        <field name="monthly_rent"/>
                        <field name="total_paid_amount" />
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--kanban view-->
    <record id="view_property_lease_kanban" model="ir.ui.view">
        <field name="name">property.lease.kanban</field>
        <field name="model">property.lease</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="lease_name"/>
                <field name="tenant_id"/>
                <field name="property_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="monthly_rent"/>
                <field name="total_paid_amount" />
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="lease_name"/></strong><br/>
                            <div><strong>Tenant ID:</strong> <field name="tenant_id"/></div><br/>
                            <div><strong>Property ID:</strong> <field name="property_id"/></div><br/>
                            <div><strong>Start Date:</strong> <field name="start_date"/></div><br/>
                            <div><strong>End Date:</strong> <field name="end_date"/></div><br/>
                            <div><strong>Monthly Rent:</strong> <field name="monthly_rent"/></div><br/>
                            <div><strong>Total Paid Amount:</strong> <field name="total_paid_amount"/></div><br/>
                            <div><strong>State:</strong> <field name="state"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--action-->
    <record id="action_property_lease" model="ir.actions.act_window">
        <field name="name">Property Lease</field>
        <field name="res_model">property.lease</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
